{
  "name": "trackspace",
  "main": "./server/dist/index.js",
  "scripts": {
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "build-client": "cd client && npm run build",
    "build-server": "cd server && npm run build",
    "install-app": "concurrently \"npm run install-client\" \"npm run install-server\"",
    "build-app": "concurrently \"npm run build-client\" \"npm run build-server\"",
    "prestart": "npm run install-app && npm run build-app",
    "heroku-postbuild": "npm run install-app && npm run build-app",
    "start": "node .",
    "start-client": "cd client && npm start",
    "start-server-dev": "cd server && npm run start-dev",
    "dev": "concurrently --kill-others-on-fail \"npm run start-server-dev\" \"npm run start-client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Trackspace-io/trackspace.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Trackspace-io/trackspace/issues"
  },
  "homepage": "https://github.com/Trackspace-io/trackspace#readme",
  "devDependencies": {},
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
