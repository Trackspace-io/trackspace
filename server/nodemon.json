{
  "ignore": ["node_modules/", "dist/"],
  "watch": ["src/"],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development",
    "DATABASE_URL": "postgres://trackspace-root:abc@localhost:5432/trackspace",
